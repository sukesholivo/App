<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dp"/>
            <gradient
                android:startColor="#D3D1D3"
                android:centerColor="#D3D2D3"
                android:centerY="1.0"
                android:endColor="#D3D1D3"
                android:angle="270"
                />
            <stroke android:width="1dp" android:color="#AEAFAF" />
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dp"/>
                <gradient
                    android:startColor="#F3AF21"
                    android:centerColor="#F3AF21"
                    android:endColor="#F3AF21"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="#F3AF21" />
            </shape>
        </clip>
    </item>

</layer-list>