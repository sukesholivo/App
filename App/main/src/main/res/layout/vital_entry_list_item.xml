<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/vitalEntryDay"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_s"
        android:textColor="#B3B3B3"
        />
    <TextView
        android:id="@+id/vitalEntryDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_s"
        android:textColor="#ABABAB"
        android:layout_alignLeft="@id/vitalEntryDay"
        android:layout_below="@id/vitalEntryDay"/>
    <TextView
        android:id="@+id/vitalData1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xxxl"
        android:gravity="center"
        android:layout_toRightOf="@id/vitalEntryDay"
        />
    <TextView
        android:id="@+id/vitalDataCondition1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:textSize="@dimen/text_size_xs"
        android:layout_alignLeft="@id/vitalData1"
        android:layout_below="@id/vitalData1"
        android:textColor="#999999"
        android:layout_marginBottom="5dp"
        />

    <TextView
        android:id="@+id/vitalData2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xxxl"
        android:gravity="center"
        android:layout_toRightOf="@id/vitalData1"
        />
    <TextView
        android:id="@+id/vitalDataCondition2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:textSize="@dimen/text_size_xs"
        android:layout_alignLeft="@id/vitalData2"
        android:layout_below="@id/vitalData2"
        android:textColor="#999999"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>