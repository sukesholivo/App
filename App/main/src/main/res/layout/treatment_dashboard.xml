<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@color/dashboard_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/pointsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:paddingRight="2dp"
                android:gravity="top"
                android:text="600"
                android:textColor="@color/dashboard_text_main"
                android:textSize="@dimen/awards_text_font_size_big"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/awards_text_height"
                android:layout_below="@id/points"
                android:gravity="bottom"
                android:text="POINTS"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="@dimen/awards_text_font_size_small"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/adheranceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            >
            <com.doctl.patientcare.main.controls.ProgressWheel
                android:id="@+id/adherenceProgress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                ProgressWheel:text="89%"
                ProgressWheel:textColor="@color/dashboard_text_secondary"
                ProgressWheel:textSize="14sp"
                ProgressWheel:rimColor="@color/transparent"
                ProgressWheel:barLength="30dp"
                ProgressWheel:barColor="@color/dashboard_text_main"
                ProgressWheel:barWidth="5dp"
                ProgressWheel:rimWidth="5dp"
                ProgressWheel:contourColor="@color/transparent"
                ProgressWheel:contourSize="0dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adherenceProgress"
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:text="ADHERENCE"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="@dimen/awards_text_font_size_small"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/progressLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/pointsLayout"
            android:layout_toLeftOf="@id/adheranceLayout">

            <ProgressBar
                android:id="@+id/treatmentProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progressbar"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:progress="40"
                />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/treatmentProgress"
                android:layout_marginTop="10dp"
                android:gravity="center|right"
                android:text="40/90 DAYS"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dashboard_text_secondary"
                android:textSize="@dimen/awards_text_font_size_small"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressText"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/vitalValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/dashboard_text_secondary"
                    android:layout_alignParentLeft="true"
                    android:text="112"/>
                <TextView
                    android:id="@+id/vitalValueSeperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/dashboard_text_secondary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/vitalValue1"
                    android:text="|"/>
                <TextView
                    android:id="@+id/vitalValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/dashboard_text_secondary"
                    android:layout_toRightOf="@id/vitalValueSeperator"
                    android:text="194"/>
                <TextView
                    android:id="@+id/vitalValueUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dashboard_text_secondary"
                    android:layout_toRightOf="@id/vitalValue2"
                    android:layout_alignBottom="@id/vitalValue2"
                    android:text="MG/DL"/>
                <TextView
                    android:id="@+id/vitalLastEntryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/dashboard_text_secondary"
                    android:layout_below="@id/vitalValue1"
                    android:layout_centerHorizontal="true"
                    android:text="5 DAYS AGO"/>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>