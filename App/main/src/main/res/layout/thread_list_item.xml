<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal"
    android:padding="15dp">

    <com.doctl.patientcare.main.controls.RoundedImageView
        android:id="@+id/profile_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile_dummy" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.60"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.03"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_size_xs"
            android:text="New Text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/latest_message_time"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:textSize="@dimen/text_size_xxxs"
                android:textColor="@color/color_dark_gray"
                android:text="" />

            <TextView
                android:id="@+id/latest_message_text"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start|center_horizontal"
                android:maxLines="1"
                android:textSize="@dimen/text_size_xxs"
                android:ellipsize="end"
                android:text="Hi"
                android:textAlignment="textStart"
                android:paddingLeft="5sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/role_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/patient_dummy"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/num_of_unread_messages"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/circle"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:gravity="center"
        android:text="2"
        />

</LinearLayout>