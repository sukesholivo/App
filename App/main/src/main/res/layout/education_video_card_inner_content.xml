<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_layout">
    <RelativeLayout
        android:id="@+id/mainEducationVideoBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/educationMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Min VIDEO"
            android:layout_alignParentLeft="true"
            android:textSize="18sp"
            android:textColor="@color/card_body_text_main"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/videoPreview"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/video_preview"
            android:layout_below="@id/educationMain"
            android:layout_alignLeft="@id/educationMain"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    <include layout="@layout/card_footer_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainEducationVideoBody"/>
</RelativeLayout>