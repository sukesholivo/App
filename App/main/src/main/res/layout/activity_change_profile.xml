<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/photoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/action_bar_main">
                <com.doctl.patientcare.main.controls.RoundedImageView
                    android:id="@+id/photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profile_dummy"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/ic_edit_white_24dp"
                    />
            </RelativeLayout>
            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textCapWords"
                android:hint="@string/hint_full_name"
                android:textSize="20sp"
                />
            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="phone"
                android:hint="@string/hint_phone"
                android:textSize="20sp"
                />
            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="date"
                android:hint="@string/hint_dob"
                android:textSize="20sp"
                android:layout="@layout/custom_float_label"
                />

            <com.iangclifton.android.floatlabel.FloatLabel
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textCapWords"
                android:hint="@string/hint_sex"
                android:textSize="20sp"
                android:layout="@layout/custom_float_label"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/color_darker_gray" />
            <Button
                android:id="@+id/password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardActionButton"
                android:textColor="@color/color_darker_gray"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_xs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/change_password_title"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>