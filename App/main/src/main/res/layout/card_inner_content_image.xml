<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_layout"
    android:paddingBottom="0dp">
    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/motivationcard_backgroundpic4_lesssugar"
        />

    <in.olivo.patientcare.main.controls.RoundedImageView
        android:id="@+id/influencerImage"
        android:layout_width="@dimen/influencer_image_width"
        android:layout_height="@dimen/influencer_image_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
</RelativeLayout>