<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

        <RelativeLayout
            android:id="@+id/smiley_images"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">
            
            <LinearLayout
                android:id="@+id/feeling_normal_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <ImageView android:id="@+id/feeling_normal_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/howru_smiley_normal"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/feeling_normal_unit_tick"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/howru_tickmark"
                        android:layout_gravity="bottom|right"
                        android:name="smiley_tick"
                        android:visibility="invisible"
                        />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="NORMAL"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feeling_ok_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <ImageView android:id="@+id/feeling_ok_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/howru_smiley_ok"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/feeling_ok_unit_tick"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/howru_tickmark"
                        android:layout_gravity="bottom|right"
                        android:name="smiley_tick"
                        android:visibility="invisible"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="OK"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feeling_sad_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                        <ImageView android:id="@+id/feeling_normal_sad"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/howru_smiley_sadface"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/feeling_sad_unit_tick"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/howru_tickmark"
                        android:layout_gravity="bottom|right"
                        android:name="smiley_tick"
                        android:visibility="invisible"/>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="NOT GOOD"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

         </RelativeLayout>

     <!--</HorizontalScrollView>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/comments"
        style="@style/edit_text_two_line"
        android:layout_margin="10dp"
        android:background="@drawable/edit_box_background"
        />

</LinearLayout>