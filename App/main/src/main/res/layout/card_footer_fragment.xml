<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <com.doctl.patientcare.main.controls.RoundedImageView
        android:id="@+id/influencerImage"
        android:layout_width="@dimen/influencer_image_width"
        android:layout_height="@dimen/influencer_image_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/profile_dummy"
        />
    <TextView
        android:id="@+id/pointText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POINTS"
        android:textSize="12sp"
        android:textColor="@color/card_footer_secondary"
        android:layout_toLeftOf="@id/influencerImage"
        android:layout_alignBottom="@id/influencerImage"
        android:layout_marginRight="5dp"
        android:gravity="bottom|left"
        android:padding="0dp"/>
    <TextView
        android:id="@+id/targetPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="30sp"
        android:textColor="@color/card_footer_main"
        android:layout_above="@id/pointText"
        android:layout_alignLeft="@id/pointText"
        android:layout_marginBottom="-5dp"
        android:gravity="bottom|left"
        android:padding="0dp"/>

</RelativeLayout>