<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_card_undobar"
    style="@style/list_card_UndoBar">
    <TextView android:id="@+id/list_card_undobar_message"
        style="@style/list_card_UndoBarMessage"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button android:id="@+id/list_card_undobar_taken_button"
            style="@style/list_card_UndoBarDoneButton"

            />
        <Button android:id="@+id/list_card_undobar_button"
            style="@style/list_card_UndoBarUndoButton"
            />
    </LinearLayout>
</LinearLayout>